{
    "manifest_version": 2,
    "name": "News Analyzer",
    "description": "Quick analyzing the accuracy of social media news",
    "version": "1",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "*://*.google.com/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "content_scripts":[{
        "matches":[
            "<all_urls>"
        ],
        "js":["insert.js"]
    }]
}
